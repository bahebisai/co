<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:minHeight="52dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">
        <!-- android:layout_marginBottom="10dp"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="51dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tel_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="4"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text=" "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tel_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="4"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text=" "
                android:textSize="12sp" />
            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="4.5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:visibility="gone"
                    android:layout_toLeftOf="@+id/tel_num"
                    android:layout_weight="1"
                    android:id="@+id/tel_shortnum"
                android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="12sp" />
            <TextView
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tel_shortnum"
                android:id="@+id/tel_num"
                    android:layout_width="wrap_content"
                android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="left|center_vertical"
                android:singleLine="true"
                    android:text=" "
                android:textSize="12sp" />


            </LinearLayout>
            <!--<CheckBox
                android:id="@+id/tel_check"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:theme="@style/WhiteCheckBox"/>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>