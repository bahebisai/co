<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1487fb"
        app:navigationIcon="@mipmap/arrow_back"
        app:title="@string/message"
        app:titleTextColor="#fff" />
    <!--  android:background="@mipmap/nagative_bar"-->
    <com.xiaomi.emm.view.viewutils.ViewLoadingLayout
        android:id="@+id/viewloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>

    <ListView
        android:id="@+id/message_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:divider="@null"
        android:headerDividersEnabled="true" />
</LinearLayout>
